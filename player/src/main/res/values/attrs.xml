<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ZVideoView">
        <!-- Loading video shows the pre-shake time of loading animation -->
        <attr name="loadingIgnoreTs" format="integer" />
        <!-- The background color used for the video prompt layer -->
        <attr name="loadingBackgroundColor" format="color|reference" />
        <!-- Resource file for video prompt loading -->
        <attr name="loadingRes" format="reference" />
        <!-- Resource file used for video prompt loading failure -->
        <attr name="failRes" format="reference" />
        <!-- Set the width of the prompt resource'loading' -->
        <attr name="loadingIconWidth" format="dimension" />
        <!-- Set the height of the prompt resource'loading' -->
        <attr name="loadingIconHeight" format="dimension" />
        <!-- Set the width of the prompt resource'failed' -->
        <attr name="failIconWidth" format="dimension" />
        <!-- Set the height of the prompt resource'failed' -->
        <attr name="failIconHeight" format="dimension" />
        <!-- The color of the text used for some hints,example LOADING  -->
        <attr name="hintTextColor" format="color|reference" />
        <!-- Text color used for secondary prompt when loading fails -->
        <attr name="refreshTextColor" format="color|reference" />
        <!-- Used to prompt loading text -->
        <attr name="loadingText" format="string" />
        <!-- The text used to prompt when loading fails -->
        <attr name="failText" format="string" />
        <!-- Text used for secondary prompt when loading fails -->
        <attr name="refreshHintText" format="string" />
        <!-- The text size used to prompt when loading fails -->
        <attr name="hintTextSize" format="dimension" />
        <!-- The text size used for secondary prompts when loading fails -->
        <attr name="refreshTextSize" format="dimension" />
        <!-- Whether to play only in full screen mode, click'true' to play and it will automatically switch to the details page to play -->
        <attr name="playAutoFullScreen" format="boolean" />
        <!-- Whether to use animation transition -->
        <attr name="enablePlayAnimation" format="boolean" />
        <!-- Whether to keep the screen always on during playback -->
        <attr name="keepScreenOnWhenPlaying" format="boolean" />
        <!-- Whether to automatically retract the toolbar -->
        <attr name="autoFullTools" format="boolean" />
        <!-- Automatically retract the toolbar time -->
        <attr name="autoFullInterval" format="integer" />
        <!-- Whether full screen mode includes bottom navigation bar -->
        <attr name="isTransactionNavigation" format="boolean" />
        <!-- Whether to allow horizontal gesture dragging -->
        <attr name="scrollXEnabled" format="boolean" />
        <!-- Execution time of full screen state transition animation -->
        <attr name="fullScreenTransactionTime" format="integer" />
        <!-- Whether to enable the mute button, [DISPLAY_FOREVER] always display in parent, [DISPLAY_VISIBLE] is always enabled, [DISPLAY_GONE] is not displayed by default but will be initialized, [GONE] is not displayed and will not be initialized -->
        <attr name="muteIconEnable" format="enum">
            <enum name="DISPLAY_FOREVER" value="3" />
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
            <enum name="GONE" value="0" />
        </attr>
        <!-- Whether to enable the play button, [DISPLAY_FOREVER] always display in parent, [DISPLAY_VISIBLE] is always enabled, [DISPLAY_GONE] is not displayed by default but will be initialized, [GONE] is not displayed and will not be initialized -->
        <attr name="playIconEnable" format="enum">
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
        </attr>
        <!-- Whether to enable the double speed button, [DISPLAY_FOREVER] always display in parent, [DISPLAY_VISIBLE] is always enabled, [DISPLAY_GONE] is not displayed by default but will be initialized, [GONE] is not displayed and will not be initialized -->
        <attr name="speedIconEnable" format="enum">
            <enum name="DISPLAY_FOREVER" value="3" />
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
            <enum name="GONE" value="0" />
        </attr>
        <!-- Whether to enable the default controller, [DISPLAY_FOREVER] always display in parent, [DISPLAY_VISIBLE] is always enabled, [DISPLAY_GONE] is not displayed by default but will be initialized, [GONE] is not displayed and not initialized -->
        <attr name="defaultControllerVisibility" format="enum">
            <enum name="DISPLAY_FOREVER" value="3" />
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
            <enum name="GONE" value="0" />
        </attr>
        <!-- Whether to enable the full screen button, [DISPLAY_FOREVER] always display in parent, [DISPLAY_VISIBLE] is always enabled, [DISPLAY_GONE] is not displayed by default but will be initialized, [GONE] is not displayed and not initialized -->
        <attr name="fullScreenEnable" format="enum">
            <enum name="DISPLAY_FOREVER" value="3" />
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
            <enum name="GONE" value="0" />
        </attr>
        <!-- Whether to enable the lock rotation button, [DISPLAY_VISIBLE] is always enabled, [DISPLAY_GONE] is not displayed by default but will be initialized, [GONE] is not displayed and not initialized -->
        <attr name="lockRotationEnable" format="enum">
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
            <enum name="GONE" value="0" />
        </attr>
        <!-- Whether to enable the bottom thumbnail progress bar, [DISPLAY_FOREVER] always display in parent, [DISPLAY_VISIBLE] is always enabled, [DISPLAY_GONE] is not displayed by default but will be initialized, [GONE] is not displayed and will not be initialized -->
        <attr name="secondarySeekBarEnable" format="enum">
            <enum name="DISPLAY_FOREVER" value="3" />
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
            <enum name="GONE" value="0" />
        </attr>
        <!-- Whether to enable the quality selection button, [DISPLAY_VISIBLE] is always enabled, [DISPLAY_GONE] is not displayed by default but will be initialized, [GONE] is not displayed and will not be initialized -->
        <attr name="qualityEnable" format="enum">
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
            <enum name="GONE" value="0" />
        </attr>
        <!-- Whether to directly start the big-full screen mode -->
        <attr name="isDefaultMaxScreen" format="boolean" />
        <!-- Whether to ignore the reverse portrait in the auto-rotating screen -->
        <attr name="isAllowReversePortrait" format="boolean" />
        <!-- Whether to allow full screen display -->
        <attr name="fullMaxScreenEnable" format="boolean" />
        <!-- Default lock direction -->
        <attr name="lockScreenRotation" format="enum">
            <enum name="LANDSCAPE" value="0" />
            <enum name="PORTRAIT" value="1" />
        </attr>
        <!-- Default mute -->
        <attr name="muteDefault" format="boolean" />
        <!-- Whether to enable global mute mode -->
        <attr name="useMuteGlobal" format="boolean" />
    </declare-styleable>
</resources>