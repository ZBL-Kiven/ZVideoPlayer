<resources>

    <style name="mProgress_circle">
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:maxHeight">100dp</item>
    </style>

    <style name="CustomSeekBarStyle">
        <item name="android:maxHeight">2dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/z_player_color_white</item>
        <item name="android:progressDrawable">@drawable/z_player_video_seek_bar_progress_drawable
        </item>
        <item name="android:minHeight">2dp</item>
        <item name="android:thumb">@drawable/z_player_video_seek_thumb</item>
    </style>

    <style name="SingleCustomSeekBarStyle">
        <item name="android:maxHeight">1.5dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/z_player_color_white</item>
        <item name="android:progressDrawable">
            @drawable/z_player_video_seek_bar_progress_drawable_single
        </item>
        <item name="android:minHeight">1.5dp</item>
        <item name="android:thumb">@drawable/z_player_video_seek_thumb_single</item>
    </style>

</resources>
