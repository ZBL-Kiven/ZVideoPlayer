<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <stroke android:width="1dp" android:color="#fff" />
            <corners android:radius="4dp" />
            <padding android:bottom="5dp" android:left="15dp" android:right="15dp" android:top="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="#ddd" />
            <corners android:radius="4dp" />
            <padding android:bottom="4dp" android:left="13dp" android:right="13dp" android:top="4dp" />
        </shape>
    </item>
</selector>